div class="panel panel-default">

	<div class="panel-heading"> S'inscrire </div>
	<%= form_for @user, html: {class: 'form-horizontal'} do |f| %>

		<div class="form-group">
			<%= f.label :mail, "E-mail (will be used for login)", class:'col-md-4 control-label' %>
			<div class="col-md-3">
				<%= f.email_field :mail, class:'form-control'%>
			</div>
		</div>

		<div class="form-group">
			<%= f.label :first_name, "Ton prÃ©nom", class:'col-md-4 control-label' %>
			<div class="col-md-3">
				<%= f.text_field :first_name, class:'form-control'%>
			</div>
		</div>

		<div class="form-group">
			<%= f.label :password, "Mot de passe", class:'col-md-4 control-label' %>
			<div class="col-md-3">
				<%= f.password_field :password, class:'form-control'%>
			</div>
		</div>

		<div class="form-group">
			<%= f.label :password_confirmation, "Confirmez le mot de passe", class:'col-md-4 control-label' %>
			<div class="col-md-3">
				<%= f.password_field :password_confirmation, class:'form-control'%>
			</div>
		</div>

		<div class="form-group">
			<%= f.label :city_id, "Quel ville ?", class:'col-md-4 control-label' %>
			<div class="col-md-3">
				<%= f.text_field :city_id, class:'form-control'%>
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-3 col-md-offset-4">
				<button type="submit" class="btn btn-primary"> S'inscrire 
				</button>
			</div>
		</div>



		<% end %>

	</div>

</div>