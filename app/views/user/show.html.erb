<div class="container-fluid my-5">
	<h3>Voici la page de <%= @user.first_name %> <%= @user.last_name %></h3>
</div>


<% @user.gossips.each do |gossip| %>
<div class="card align-self-center mt-2" style="width: 100rem;">
    <div class="card-body">
    <h5 class="card-title"><%= link_to "#{gossip.title}", "/gossip/#{gossip.id}" %> </h5>
    <p class="card-text"><%= gossip.content %></p>


				
			

</div>
</div>

<% end %>